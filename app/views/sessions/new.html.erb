<%= form_for(:session, url: session_path) do |form| %>
	<div class="field">
		<%= form.label :username %>
		<%= form.text_field :username, autocapitalize: 'off' %>
	</div>
	<div class="field">
		<%= form.label :password %>
		<%= form.password_field :password %>
	</div>
	<nav class="nav">
		<%= form.submit "Login" %>
		<%= link_to "Sign Up", new_user_path %>
	</nav>
<% end %>